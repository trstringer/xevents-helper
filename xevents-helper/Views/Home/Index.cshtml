@using xevents_helper.ViewModels
@model HelperViewModel

@{
    ViewBag.Title = "XEvents Helper";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Extended Events Helper</h2>
        </div>
    </div>
    <div class="row main-row">
        <div class="col-md-6 col-md-offset-3">
            @Html.TextBoxFor(m => m.SessionName, new { @class = "form-control", id = "SessionName", placeholder = "Session name" })
        </div>
    </div>
    <div class="row main-row">
        <div class="col-md-6 col-md-offset-3">
            @Html.DropDownListFor(m => m.SelectedRelease, Model.Releases, new { @class = "form-control", id = "ReleaseNameList" })
        </div>
    </div>
    <div class="row main-row">
        <div class="col-md-6 col-md-offset-3">
            <input type="text" id="SearchInput" class="form-control" placeholder="Search events" />
            @Html.ListBoxFor(m => m.SelectedEvent, Model.Events, new { @class = "form-control", id = "EventNameList" })
            <br />
            <p id="EventSessionDescription"></p>
            <br />
            <button id="AddEvent" class="btn btn-default" style="display: none;"></button>
        </div>
    </div>
    <div class="row main-row" id="SelectedEvents"></div>
    <div class="row main-row">
        <div class="col-md-6 col-md-offset-3">
            <textarea id="CreateSessionDdl" class="form-control" rows="10"></textarea>
        </div>
    </div>
</div>