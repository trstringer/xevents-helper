@using xevents_helper.ViewModels
@model HelperViewModel

@{
    ViewBag.Title = "XEvents Helper";
}

<div class="container">
    <div class="row text-center">
        <div class="col-md-8">
            <h2>Extended Events Helper</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <label for="SessionName" class="col-md-2 control-label">Session Name</label>
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.SessionName, new { @class = "form-control", id = "SessionName" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @Html.DropDownListFor(m => m.SelectedRelease, Model.Releases, new { @class = "form-control" })
        </div>
    </div>
</div>